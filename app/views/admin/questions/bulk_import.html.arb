# frozen_string_literal: true

div do
  active_admin_form_for @import || import, as: :import, url: import_admin_questions_path do |form|
    form.semantic_errors *form.object.errors.attribute_names
    puts *form.object.errors.attribute_names
    form.inputs 'Details' do
      hint = Questions.import_csv_form_hint
      form.input :csv, as: :file, label: 'CSV file', hint: hint.html_safe
    end
    form.actions do
      form.action :submit, button_html: { 'data-disable-with' => 'Uploading...', value: 'Import' }
      form.cancel_link
    end
  end
end
