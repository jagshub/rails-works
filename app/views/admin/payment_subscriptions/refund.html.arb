# frozen_string_literal: true

div do
  active_admin_form_for refund_form, url: refund_subscription_admin_payment_subscription_path(resource), method: :post do |form|
    form.semantic_errors *form.object.errors.attribute_names

    form.inputs 'Details' do
      form.input :stripe_subscription_id, label: 'Enter Stripe Subscription ID'
      form.input :refund_reason, label: 'Refund reason'
      form.input :till_the_end_of_the_billing_period, as: :select, collection: [true, false], label: 'Active until the end of the billing period', include_blank: false
    end

    form.actions do
      form.action :submit, label: 'Refund'
      form.cancel_link
    end
  end
end
