div do
  active_admin_form_for resource, url: sent_admin_newsletter_path(resource) do |form|
    h1 %(Are you sure you want to send the "#{ resource.subject }" email?)
    form.actions do
      form.action :submit, button_html: { 'data-disable-with' => 'Confirming...', value: 'Yes' }
      form.cancel_link
    end
  end
end
