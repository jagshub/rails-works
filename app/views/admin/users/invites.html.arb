# frozen_string_literal: true

div do
  active_admin_form_for @invites || invites, as: :invites, url: update_invites_admin_users_path do |form|
    form.semantic_errors *form.object.errors.attribute_names
    form.inputs 'Details' do
      form.input :count, label: 'Count of invites'

      hint = "<strong>#{ form.object.user_id_header }</strong> column is required"
      form.input :csv, as: :file, label: 'CSV file', hint: hint.html_safe
    end
    form.actions do
      form.action :submit, button_html: { 'data-disable-with' => 'Uploading...', value: 'Update invites' }
      form.cancel_link
    end
  end
end
