<div class="notification">
  <table border="0" cellpadding="0" cellspacing="0" width="100%">
    <%= notification_header subject: 'New mentions in Product Hunt Shout-out'  %>
    <tr>
      <td>
        <table border="0" cellpadding="0" cellspacing="0" width="100%" class="notification-comment">
          <tr>
            <td class="notification-thumbnail" width="30">
              <%= link_to_user @shoutout.user, class: 'user', size: 20 %>
            </td>
            <td>
              <span class="notification-comment-text">
                <%= simple_format BetterFormatter.call(@shoutout.body, mode: :simple) %>
              </span>
            </td>
          </tr>
        </table>
      </td>
    </tr>
    <%= notification_action_button 'View on Product Hunt', shoutout_url(@shoutout, @shoutout)  %>
    <%= notification_footer mailer_type: 'mention notifications' %>
  </table>
</div>
